.row
  .large-12.columns
    h1 = t('.title') 
    = simple_form_for @user do |f|
      = f.input :name, label: t('.name')
      = f.input :email do
        = f.input_field :email, type: :email, class: "mailcheck"
        = f.hint t('.email_hint'), style: "display: none"
      .row
        .medium-6.columns
          = f.input :password, t('.password')
        .medium-6.columns
          = f.input :password_confirmation, t('.password_confirmation')
      .row
        .medium-6.columns
          = f.label :locale, t('.language')
          = f.select :locale, [["English", "en"], ["Espa√±ol", "es"]] 
      = f.button :submit t('.submit')